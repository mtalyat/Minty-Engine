name: animator2
fsm
    start: idle
    scope
        rotate: 0
        flicker: 0
    states
        idle
            value: i 0
            transitions
                -
                    state: moving
                    conditions
                        - move != 0
                -
                    state: flicker
                    conditions
                        - flicker != 0
        moving
            value: i 1
            transitions
                -
                    state: idle
                    conditions
                        - move == 0
                -
                    state: flicker
                    conditions
                        - flicker != 0
        flicker
            value: i 2
            transitions
                -
                    state: idle
                    conditions
                        - flicker == 0